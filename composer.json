{
    "name": "leeovery/claude-manager",
    "description": "Plugin manager for Claude Code skills and commands",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Lee Overy",
            "email": "me@leeovery.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "composer-plugin-api": "^2.0",

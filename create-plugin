#!/usr/bin/env bash

set -e

if [ -z "$1" ]; then
    echo "Usage: create-plugin <plugin-name>"
    exit 1
fi

PLUGIN_NAME="$1"
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PLUGIN_DIR="$SCRIPT_DIR/../$PLUGIN_NAME"
SCOPE="@leeovery"
VENDOR_NAME="leeovery"

if [ -d "$PLUGIN_DIR" ]; then
    echo "Error: Directory $PLUGIN_DIR already exists"
    exit 1
fi

echo "Creating plugin: $PLUGIN_NAME"

# Create directory structure
mkdir -p "$PLUGIN_DIR/skills"
mkdir -p "$PLUGIN_DIR/commands"
mkdir -p "$PLUGIN_DIR/agents"
mkdir -p "$PLUGIN_DIR/hooks"
mkdir -p "$PLUGIN_DIR/.claude/skills"

touch "$PLUGIN_DIR/skills/.gitkeep"
touch "$PLUGIN_DIR/commands/.gitkeep"
touch "$PLUGIN_DIR/agents/.gitkeep"
touch "$PLUGIN_DIR/hooks/.gitkeep"

# Create package.json
cat > "$PLUGIN_DIR/package.json" <<EOF
{
  "name": "$SCOPE/$PLUGIN_NAME",
  "version": "0.0.1",
  "description": "Claude Code plugin: $PLUGIN_NAME",
  "license": "MIT",
  "author": "Lee Overy <me@leeovery.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/$VENDOR_NAME/$PLUGIN_NAME.git"
  },
  "type": "module",
  "scripts": {
    "postinstall": "claude-plugins add"
  },
  "dependencies": {
    "claude-manager": "^2.0.0"
  },
  "files": [
    "skills",
    "commands",
    "agents",
    "hooks"
  ]
}
EOF

# Create .gitignore
cat > "$PLUGIN_DIR/.gitignore" <<EOF
node_modules/
.DS_Store
.idea/
.vscode/
EOF

# Build related packages list dynamically
RELATED_PACKAGES=""
for dir in "$SCRIPT_DIR"/../claude-*/; do
    pkg_name=$(basename "$dir")
    # Skip current package and non-directories
    if [ "$pkg_name" != "$PLUGIN_NAME" ] && [ -d "$dir" ]; then
        # Get description from package.json if it exists
        if [ -f "$dir/package.json" ]; then
            desc=$(grep -o '"description"[[:space:]]*:[[:space:]]*"[^"]*"' "$dir/package.json" 2>/dev/null | sed 's/"description"[[:space:]]*:[[:space:]]*"\(.*\)"/\1/' | head -1)
            [ -z "$desc" ] && desc="Claude Code plugin"
        else
            desc="Claude Code plugin"
        fi
        RELATED_PACKAGES="$RELATED_PACKAGES- [**$pkg_name**](https://github.com/$VENDOR_NAME/$pkg_name) — $desc
"
    fi
done

# Convert package name to title (claude-my-skills -> Claude My Skills)
PLUGIN_TITLE=$(echo "$PLUGIN_NAME" | sed 's/-/ /g' | sed 's/\b\(.\)/\u\1/g')

# Create README.md
cat > "$PLUGIN_DIR/README.md" <<EOF
<h1 align="center">$PLUGIN_TITLE</h1>

<p align="center">
  <strong>Skills & Commands for Claude Code</strong>
</p>

<p align="center">
  <a href="#installation">Installation</a> •
  <a href="#skills">Skills</a> •
  <a href="#commands">Commands</a> •
  <a href="#how-it-works">How It Works</a> •
  <a href="#contributing">Contributing</a>
</p>

---

## About

Claude Code plugin package.

**This is a work in progress.** Skills and commands are actively being developed.

## Installation

\`\`\`bash
npm install $SCOPE/$PLUGIN_NAME
\`\`\`

That's it. The [Claude Manager](https://github.com/$VENDOR_NAME/claude-manager) handles everything else automatically.

## How It Works

This package depends on [\`claude-manager\`](https://github.com/$VENDOR_NAME/claude-manager), which:

1. **Copies skills** into your project's \`.claude/skills/\` directory
2. **Copies commands** into your project's \`.claude/commands/\` directory
3. **Copies agents** into your project's \`.claude/agents/\` directory
4. **Copies hooks** into your project's \`.claude/hooks/\` directory
5. **Tracks installed plugins** via a manifest file
6. **Handles installation/removal** automatically via npm hooks

You don't need to configure anything—just install and start coding.

